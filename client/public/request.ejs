<header class="dark-color">
  <div class="container">
    <div class="row">
      <div class="col s12 center-align flex">
        <h3 class="page-header-heading">Request an Advisor</h3>
      </div>
    </div>
  </div>
</header>

<main ng-app="pklApp" ng-controller="requestController">

  <section id="request" class="request page grey lighten-4">
    <div class="container">

      <form name="requestForm" id="request-form" class="request-form col s12" ng-submit="submitRequest()" ng-hide="success">

        <div class="row">
            <div class="col s12">
                <h4>Getting help is easy</h4>
                <p>Tell us a bit about your yourself, your organization, and the challenges you're facing. We will contact you within 24 hours to start the matching process.</p>
            </div>
        </div>

        <div class="row">
          <div class="col s12">
            <h5>Advisor Request Form</h5>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12 m6">
            <input type="text" id="fname" class="validate" required ng-model="request.firstName">
            <label for="fname">Your First Name</label>
          </div>

          <div class="input-field col s12 m6">
            <input type="text" id="lname" class="validate" required ng-model="request.lastName">
            <label for="lname">Your Last Name</label>
          </div>
        </div><!-- ./row -->

        <div class="row">
          <div class="input-field col s12">
            <input type="email" id="email" class="validate" required ng-model="request.email">
            <label for="email">Your Email Address</label>
          </div>
        </div><!-- ./row -->

        <div class="row">
          <div class="input-field col s12">
            <textarea id="organization" class="materialize-textarea" length="500" required ng-model="request.orgDesc"></textarea>
            <label for="organization">Tell Us About Your Organization</label>
          </div>
        </div><!-- ./row -->

        <div class="row">
          <div class="input-field col s12">
            <textarea id="question" class="materialize-textarea" length="500" required ng-model="request.text"></textarea>
            <label for="question">How can we help you?</label>
          </div>
        </div><!-- ./row -->

        <!-- Button an Messaging Row -->
        <div class="row">
          <div class="col s12">
            <div id="success"></div>
            <button id="submitBtn" type="submit" ng-hide="submitted || success" class="red waves-effect waves-light btn-large">Request Advisor</button>

            <div class="spinner-block" style="" ng-show="submitted" ng-cloak>
              <div class="preloader-wrapper active">
                 <div class="spinner-layer spinner-red-only">
                   <div class="circle-clipper left">
                     <div class="circle"></div>
                    </div><div class="gap-patch">
                     <div class="circle"></div>
                    </div><div class="circle-clipper right">
                    <div class="circle"></div>
                  </div>
                </div>
              </div>

              <span class="spinner-msg"><i>Submitting Request...</i></span>
            </div>

            <span class="errors" ng-show="errors">Error submitting request, please try again.</span>



          </div>
        </div><!-- ./row Button an Messaging Row-->

        <!-- Terms Row -->
        <div class="row">
          <div class="col s12">
            <p>By clicking on "Request Advisor", you agree to the <a>Terms and Conditions</a>.</p>
          </div>
        </div><!-- ./row Terms Row -->

      </form>


      <!-- Submit Success Message -->
      <div class="success-row row" ng-show="success">
        <div class="col s12">

          <h4>KABOOM!</h4>
          <br />
          <h5>Your request has been successfully received. </h5>
          <p>You are well on your way to connecting with a technical advisor.</p>
          <p>We will contact you within 24 hours to continue the matching process. In the meantime, please make sure to read the guidelines for being an advisee</p>

          <a class="red waves-effect waves-light btn-large" href="/guidelines">Read The Guidelines</a>

        </div>
      </div>



    </div> <!-- ./container -->
  </section>

</main>
