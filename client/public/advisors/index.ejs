  <div class="divider"></div>

  <section class="advisors grey lighten-4">
    <div class="container">
      <div class="row">
        <div class="col s12">
          <p>Here are just <b>a few</b> of our advisors and what they can assist you with. Click on a card to view their bios.</p>
        </div>
      </div>
      <div class="row flex" ng-app="pklApp" ng-controller="advisorController">

        <!-- Advisor Item -->
        <div class="card advisor flex-item" ng-repeat="advisor in advisors">
          <div class="card-image">
            <img class="activator" ng-src="{{advisor.image}}">
          </div>
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4">
              <span ng-bind="advisor.firstName"></span>
              <span ng-bind="advisor.lastName"></span>
              <i class="material-icons right">more_vert</i>
            </span>
            <p>
              <span class="title" ng-bind="advisor.title"></span> - 
              <a ng-href="{{advisor.url}}">{{advisor.company}}</a>
              <ul class="advice-collection">
                <li ng-repeat="specialty in advisor.specialties">{{specialty}}</li>
              </ul>
            </p>
          </div>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4">
              <span ng-bind="advisor.firstName"></span>
              <span ng-bind="advisor.lastName"></span>
              <i class="material-icons right">close</i>
            </span>
            <p>{{advisor.bio}}</p>
          </div>
        </div>
        <!-- /Item -->

      </div>
    </div>
  </section>

  <%- partial("../_shared_partials/learn_more", {}) %>

</main>
